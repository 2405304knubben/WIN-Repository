@{
    ViewData["Title"] = "Admin Dashboard";
}

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<link rel="stylesheet" href="~/css/Dashboard.css" asp-append-version="true" />

<div class="text-center mb-4 fade-in">
    <h1 class="display-4">Welkom bij het Admin Dashboard</h1>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card shadow-sm slide-in-left">
            <div class="card-body">
                <h5 class="card-title">Verkoop Statistieken</h5>
                <div class="chart-container">
                    <canvas id="salesChart"></canvas>
                    <a class="btn btn-link" role="button">Verkoop Statistieken voor het hele maand</a>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card shadow-sm slide-in-right">
            <div class="card-body">
                <h5 class="card-title">Registraties</h5>
                <div class="chart-container">
                    <canvas id="registrationsChart"></canvas>
                    <a class="btn btn-link" role="button">Nieuwe Registraties voor het hele maand</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Destroy existing charts if they exist
        let salesChart = Chart.getChart('salesChart');
        if (salesChart) {
            salesChart.destroy();
        }
        let registrationsChart = Chart.getChart('registrationsChart');
        if (registrationsChart) {
            registrationsChart.destroy();
        }

        // Common chart options
        const commonOptions = {
            responsive: true,
            animation: {
                
                easing: 'easeInOutQuad',
                x: true,
                y: false
            },
            scales: {
                x: {
                    grid: {
                        color: 'rgba(0, 0, 0, 0.1)'
                    }
                },
                y: {
                    grid: {
                        color: 'rgba(0, 0, 0, 0.1)'
                    },
                    beginAtZero: true
                }
            },
            plugins: {
                legend: {
                    position: 'top'
                }
            }
        };

        // Initialize charts after a small delay to allow animations
        setTimeout(() => {
            // Sales Chart
            const salesCtx = document.getElementById('salesChart').getContext('2d');
            salesChart = new Chart(salesCtx, {
                type: 'line',
                duration: 1000,
                data: {
                    labels: ['Jan', 'Feb', 'Mar', 'Apr', 'Mei', 'Jun'],
                    datasets: [{
                        label: 'Verkopen voor de dag',
                        data: [12, 19, 3, 5, 2, 3],
                        borderColor: 'rgb(0, 0, 0)',
                        backgroundColor: 'rgba(0, 0, 0, 0.1)',
                        tension: 0.1,
                        fill: true
                    }]
                },
                options: commonOptions
            });

            // Registrations Chart 
            const registrationsCtx = document.getElementById('registrationsChart').getContext('2d');
            registrationsChart = new Chart(registrationsCtx, {
                type: 'line',
                duration: 2000,
                data: {
                    labels: ['Jan', 'Feb', 'Mar', 'Apr', 'Mei', 'Jun'],
                    datasets: [{
                        label: 'Nieuwe registraties',
                        data: [5, 7, 4, 9, 12, 8],
                        borderColor: 'rgb(128, 128, 128)',
                        backgroundColor: 'rgba(128, 128, 128, 0.1)',
                        tension: 0.1,
                        fill: true
                    }]
                },
                options: commonOptions
            });
        }, 500);

        // Add animation classes after page load
        document.addEventListener('DOMContentLoaded', function() {
            setTimeout(() => {
                document.querySelectorAll('.chart-container').forEach(container => {
                    container.classList.add('visible');
                });
            }, 100);
        });
    </script>
}

