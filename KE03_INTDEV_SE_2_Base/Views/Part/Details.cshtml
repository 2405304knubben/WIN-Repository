@model DataAccessLayer.Models.Part

@{
    ViewData["Title"] = "Part Informatie";
}

<video autoplay loop muted playsinline id="bg-video">
    <source src="/Videos/matrix.mp4" type="video/mp4">
    Your browser does not support the video tag.
</video>

<h1 class="text-white">Informatie</h1>

<div class="card matrix-card shadow mb-4">
    <h4>Onderdeel</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Naam
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Beschrijving
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
       <dt class="col-sm-2">
            Prijs
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            Voorraad
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Stock)
        </dd>
    </dl>
</div>

<div>
    <a class="btn btn-success" asp-action="Edit" asp-route-id="@Model?.Id">Aanpassen</a> |
    <a class="btn btn-secondary" asp-action="Index">Terug naar productenoverzicht</a>
</div>
